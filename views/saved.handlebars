<div id="wrapper">

  <ul class="nav">
    <li class="nav-item">
      <a href="/" class="nav-link navbar-brand active">Mongo Scraper</a>
    </li>
    <li class="nav-item">
      <a class="nav-link">Saved Articles</a>
    </li>
  </ul>

  <div class="jumbotron">
    <h1 class="display-4">MONGO SCRAPER</h1>
    <p class="lead">CNN EDITION</p>
    <hr class="my-4">
    <p class="lead">

    </p>
  </div>


  <div class="articles">
    {{#if article}} {{#each article}} 
    
    <a href="https://www.huffingtonpost.com/{{this.link}}" target="_blank">{{this.title}}
        <br>{{this.summary}} 
        <div class="dodoimg">
        <img src="{{this.image}}">
      </div>
      </a>
      
    <button type="button" class="btn btn-success notesButton" data-id={{this._id}} data-toggle="modal" data-target="#notesModal{{this._id}}">Article Notes</button>
    <button type="button" class="btn btn-success deleteArticleButton" data-id={{this._id}}>Delete From Saved</button>

  </div>
  {{/each}} {{else}}
  <div class="noArticles">
    Uh, oh. Looks like we don't have any saved articles.
  </div>
  {{/if}}

</div>
{{#each article}} {{> notes }} {{/each}}