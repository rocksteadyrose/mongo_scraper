<div id="wrapper">

  <ul class="nav">
    <li class="nav-item">
      <a href="/" class="nav-link navbar-brand active">Mongo Scraper</a>
    </li>
    <li class="nav-item">
      <a href="/saved" class="nav-link">Saved Articles</a>
    </li>
    <li class="nav-item">
      <a class="btn btn-primary btn-lg deleteAllButton" role="button">Delete All Articles</a>
    </li>
    <li class="nav-item">
      <a class="btn btn-primary btn-lg scrapebutton" role="button" data-toggle="modal" data-target="#scraperModal">SCRAPE</a>
    </li>


    <div class="modal fade" id="scraperModal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">Added new articles!

            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn closebutton" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>


  </ul>

  <div class="jumbotron">
    <h1 class="display-4">MONGO SCRAPER</h1>
    <p class="lead">THE DODO EDITION</p>
    <hr class="my-4">
    <p class="lead">

    </p>
  </div>

  <div class="articles">
    {{#if article}} {{#each article}}
    <div class="dodoinfo">
      <a href="https://www.huffingtonpost.com/{{this.link}}" target="_blank">{{this.title}}
        <br>{{this.summary}} </a>
        <div class="dodoplacement"></div>
        <div class="dodoimg">
          <img src="{{this.image}}">
           
           
          
        </div>


      <br>
      <button type="button" class="btn btn-success saveButton" data-id={{this._id}}>Save Article</button>
      <button type="button" class="btn btn-success deleteButton" data-id={{this._id}}>Delete Article</button>
      
    </div>
  </div>
  {{/each}} {{else}}
  <div class="noArticles">
    Uh, oh. Looks like we don't have any new articles.
  </div>
  {{/if}}

</div>
