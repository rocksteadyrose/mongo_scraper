<div class="modal fade" id="notesModal{{this._id}}" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Notes for article:</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
            </div>

            <span aria-hidden="true">&times;</span>
            <div class="modal-body">
                {{#if this.note}} {{#each this.note}}
                <div class="notessection">
                    {{this.date}}
                    <br> 
                    {{this.body}}
                    <button type="button" class="deleteNote" data-id={{this._id}}>X</button>
                </div>
                {{/each}}{{else}}
                <p class="nonotessection">
                    No notes yet
                </p>
                {{/if}} New Note
                <textarea rows="4" cols="20" id="note{{this._id}}"></textarea>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn saveNotesButton" data-id={{this._id}}>Save</button>
                <button type="button" class="btn cancelButton" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>